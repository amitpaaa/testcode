 FilterCriteria filterCriteria = summaryRequest.getFilterCriteria();

    // Transform filter criteria
    List<Filter> transformedFilters = filterCriteria.getFilters().stream()
        .map(filter -> {
            if ("businessCheckGroup".equals(filter.getKey())) {
                // Replace businessCheckGroup with busCheckGroup
                return new Filter("busCheckGroup", filter.getValue(), filter.getOperation(), filter.getDataType());
            }
            return filter;
        })
        .collect(Collectors.toList());

    // Update filter criteria with transformed filters
    filterCriteria.setFilters(transformedFilters);

    // Create specification using the transformed filter criteria
    GenericSpecification<HealthCheckSummary> specification = OperationsUtils.createSpecification(filterCriteria, null);
