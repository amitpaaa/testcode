 Map<String, Object> filters = summaryRequest.getFilterCriteria().getFilters();

    // Transform filter criteria from businessCheckGroup to busCheckGroup
    Map<String, Object> transformedFilters = filters.entrySet().stream()
        .collect(Collectors.toMap(
            entry -> "businessCheckGroup".equals(entry.getKey()) ? "busCheckGroup" : entry.getKey(),
            Map.Entry::getValue
        ));

    // Create a new FilterCriteria object with transformed filters
    FilterCriteria transformedFilterCriteria = new FilterCriteria();
    transformedFilterCriteria.setFilters(transformedFilters);
    transformedFilterCriteria.setPageNum(summaryRequest.getFilterCriteria().getPageNum());
    transformedFilterCriteria.setPageSize(summaryRequest.getFilterCriteria().getPageSize());

    // Create specification using the transformed filter criteria
    GenericSpecification<HealthCheckSummary> specification = OperationsUtils.createSpecification(transformedFilterCriteria, null);
