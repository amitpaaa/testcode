 @Test
    public void testGetHealthCheckSummaryDetails_WithFilterCriteria() {
        GetSummaryDetailsRequest request = new GetSummaryDetailsRequest();
        request.setFilterCriteria(new FilterCriteria("busCheckGroup", "group1", "EQUALS"));
        request.setPageSize(10);
        request.setPageNum(0);

        HealthCheckSummary summary = new HealthCheckSummary();
        summary.setBusCheckGroup("group1");
        summary.setTotalRecords(5);
        summary.setRecordsFailed(1);
        summary.setRecordsPassed(4);

        List<HealthCheckSummary> summaries = Arrays.asList(summary);
        when(healthCheckSummaryRepository.findAll(any(GenericSpecification.class))).thenReturn(summaries);

        SummaryDetailsDTO dto = new SummaryDetailsDTO();
        dto.setBusCheckGroup("group1");
        dto.setTotalRecords(5);
        dto.setRecordsFailed(1);
        dto.setRecordsPassed(4);

        when(healthCheckSummaryMapper.toDtos(any())).thenReturn(Arrays.asList(dto));

        APIResponse<List<SummaryDetailsDTO>> response = healthCheckSummaryService.getHealthCheckSummaryDetails(request);

        assertNotNull(response);
        assertEquals(HttpStatus.OK, response.getStatus());
        assertEquals("Success", response.getMessage());
        assertEquals(1, response.getData().size());
        assertEquals(1, response.getTotalPages());
        assertEquals(1, response.getPageNum());
        assertEquals(1, response.getTotalSize());
    }
