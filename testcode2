private FilterCriteria transformBaseSearchRequests(List<BaseSearchRequest> baseSearchRequests) {
    List<Filter> filters = baseSearchRequests.stream()
        .map(request -> {
            if ("businessCheckGroup".equals(request.getKey())) {
                return new Filter("busCheckGroup", request.getValue(), request.getOperation(), request.getDataType());
            }
            return new Filter(request.getKey(), request.getValue(), request.getOperation(), request.getDataType());
        })
        .collect(Collectors.toList());

    FilterCriteria filterCriteria = new FilterCriteria();
    filterCriteria.setFilters(filters);
    return filterCriteria;
}
