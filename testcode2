    int pageSize = summaryRequest.getPageSize();
    int pageNum = summaryRequest.getPageNum() - 1;
    int totalSize = result.size();
    int start = Math.min(pageNum * pageSize, totalSize);
    int end = Math.min((pageNum + 1) * pageSize, totalSize);
    List<SummaryDetailsDTO> pagedResult = result.subList(start, end);

    return new APIResponse<>(
            pagedResult,
            "Success",
            (totalSize + pageSize - 1) / pageSize,  // Total pages
            pageNum + 1,
            pagedResult.size(),
            HttpStatus.OK
    );
