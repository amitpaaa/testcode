FilterCriteria filterCriteria = summaryRequest.getFilterCriteria();

    // Transform filter criteria using a Map
    Map<String, String> transformedFilters = filterCriteria.getFilters().stream()
        .collect(Collectors.toMap(
            filter -> "businessCheckGroup".equals(filter.getKey()) ? "busCheckGroup" : filter.getKey(),
            Filter::getValue
        ));

    // Create a new FilterCriteria object with transformed filters
    FilterCriteria transformedFilterCriteria = new FilterCriteria();
    transformedFilterCriteria.setFilters(transformedFilters.entrySet().stream()
        .map(entry -> new Filter(entry.getKey(), entry.getValue(), filterCriteria.getOperation(), filterCriteria.getDataType()))
        .collect(Collectors.toList()));
    transformedFilterCriteria.setPageNum(filterCriteria.getPageNum());
    transformedFilterCriteria.setPageSize(filterCriteria.getPageSize());

    // Create specification using the transformed filter criteria
    GenericSpecification<HealthCheckSummary> specification = OperationsUtils.createSpecification(transformedFilterCriteria, null);
