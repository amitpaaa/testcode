private void getGroupByPredicates(Root<T> root, CriteriaQuery<?> query, SearchCriteria criteria, CriteriaBuilder criteriaBuilder, Path<?> path) {
    if ("groupBy".equalsIgnoreCase(criteria.getOperation())) {
        // Assuming execId and BusinessCheckGroup are fields in your entity
        Path<String> execIdPath = root.get("execId");
        Path<String> businessCheckGroupPath = root.get("businessCheckGroup");

        // Combining the two paths into a composite key
        Expression<String> compositeKey = criteriaBuilder.concat(execIdPath, businessCheckGroupPath);

        if (path.getJavaType() == String.class) {
            // Grouping by the composite key
            query.groupBy(compositeKey);

            // Optionally, you can add an orderBy clause if needed
            query.orderBy(criteriaBuilder.asc(compositeKey));
        }
    }
}
