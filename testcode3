 ngOnInit(): void {
    this.issueDetailForm = this.data.issueDetailForm;
    this.issueLogCode = this.issueDetailForm.get('issueLogCode')?.value;
    this.contractName = this.issueDetailForm.get('contractName')?.value;

    this.issueDailyDetails = this.data.issueDetailForm.value.issueDailyDetails; 
    this.updateDataSource();
  }

  updateDataSource(): void {
    this.dataSource = {
      currentPage: 1,
      totalRecords: this.issueDailyDetails.length,
      totalPages: Math.ceil(this.issueDailyDetails.length / this.pageSize),
      data: this.issueDailyDetails,
      message: '',
      status: 'success'
    };
  }
}
