Map<String, Object> filterCriteria = summaryRequest.getFilterCriteria();
filterCriteria.put("groupBy", "businessCheckGroup");

// Create specification with updated filters
GenericSpecification<HealthCheckSummary> specification = 
    OperationsUtils.createSpecification(filterCriteria, joinMap: null);




BaseSearchRequest baseSearchRequest = summaryRequest.getBaseSearchRequest();
baseSearchRequest.getFilterCriteria().put("groupBy", "businessCheckGroup");

// Step 2: Create specification using the updated BaseSearchRequest
GenericSpecification<HealthCheckSummary> specification = 
    OperationsUtils.createSpecification(baseSearchRequest, joinMap: null);




SearchCriteria groupByCriteria = new SearchCriteria();
groupByCriteria.setOperation("groupBy");
groupByCriteria.setValue("businessCheckGroup"); // Column name or field for grouping

baseSearchRequest.getCriterialist().add(groupByCriteria);
